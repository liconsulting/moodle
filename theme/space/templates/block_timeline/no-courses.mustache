{{!
    @template block_timeline/no-courses

    This template renders a notice that the user has no active courses.

    Example context (json):
    {
        "hascourses": false,
        "urls": {
            "noevents": "#"
        }
    }
}}
{{^hascourses}}
    <div class="mt-3 pl-2 badge badge-warning" data-region="no-courses-empty-message">
        <div class="d-inline-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="currentColor"><g data-name="icon"><g data-name="alert-circle"><rect width="24" height="24" opacity="0"/><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z"/><circle cx="12" cy="16" r="1"/><path d="M12 7a1 1 0 0 0-1 1v5a1 1 0 0 0 2 0V8a1 1 0 0 0-1-1z"/></g></g></svg>   
            <span class="ml-2">{{#str}} nocoursesinprogress, block_timeline {{/str}}
        </div>
    </div>
{{/hascourses}}
